<h1>New game</h1>
<div class= "container">
  <% @letters.each do |letter| %>
  <p><%= letter.capitalize %></p>
  <% end %>
</div>

<form action="/score" method = "POST">
  <input type="text" name="word">
  <input type="submit" value="chose letters!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
